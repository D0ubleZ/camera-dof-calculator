<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="31dp"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        app:srcCompat="@drawable/ic_baseline_brightness_2_24" />

    <TextView
        android:id="@+id/textMake"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/item_icon"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="52dp"
        android:layout_toEndOf="@+id/item_icon"
        android:layout_toRightOf="@+id/item_icon"
        android:text="Make shown Here"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textFocal"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/textMake"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="-58dp"
        android:layout_toEndOf="@+id/item_icon"
        android:layout_toRightOf="@+id/item_icon"
        android:text="FocalLength"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textAperture"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="-11dp"
        android:layout_marginRight="-11dp"
        android:layout_toEndOf="@+id/textFocal"
        android:layout_toRightOf="@+id/textFocal"
        android:text="Aperture"
        android:textSize="14sp" />
</RelativeLayout>
